@model MyLibrary.Models.BookItem

@{
    ViewData["Title"] = "Редактировать";
}

<h4>Редактировать</h4>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="col-sm">
                <label asp-for="Name" class="col-sm col-form-label">Имя</label>
                <div class="col-sm">
                    <input asp-for="Name" class="form-control" id="Name" type="text" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">
                <label asp-for="Description" class="col-sm col-form-label">Описание</label>
                <div class="col-sm">
                    <input asp-for="Description" class="form-control" id="Description" type="text" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm">
                <label class="col-smcol-form-label"></label>
                <div>
                    <input type="submit" value="Применить" class="btn btn-primary" />
                    <a class="btn btn-primary ml-3" asp-action="Index">Назад к списку</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
